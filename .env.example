# ============================================================================
# PostgreSQL Configuration
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres  # REQUIRED: Change this for production!
POSTGRES_DB=codelumen
POSTGRES_SCHEMA=codelumen
POSTGRES_CACHE_SCHEMA=codelumen_cache

# PostgreSQL Connection Pool Configuration
# Minimum number of connections in pool (default: 1)
POSTGRES_POOL_MINCONN=2
# Maximum number of connections in pool (default: 20)
POSTGRES_POOL_MAXCONN=20

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_AUTH=myredissecret  # OPTIONAL: Set your Redis password (leave empty if no authentication)
REDIS_DB=1

# ============================================================================
# ClickHouse Configuration
# ============================================================================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=9000
CLICKHOUSE_USER=clickhouse
CLICKHOUSE_PASSWORD=clickhouse  # REQUIRED: Change this for production!
CLICKHOUSE_DB=codelumen_analytics

# ============================================================================
# MinIO/S3 Configuration
# ============================================================================
MINIO_ENDPOINT=localhost:9090
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=miniosecret  # REQUIRED: Change this for production!
MINIO_BUCKET=codelumen
MINIO_REGION=us-east-1
